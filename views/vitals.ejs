<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Patient Vitals Form</title>
	<link  href="/vitals.css"  rel="stylesheet">

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.3/socket.io.js"></script>


<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

	<body>
		<div class="topnav">
	
			<a  href="home">Home</a>
			<a class="active" href="vitals">Patient Vital signs</a>
			<a href="history">Vitals History</a>
			<a href="index"  style="float:right;">Logout</a>
			
		  </div> 
		  <div class="blurvit"  ></div>
			
					<div class="wrapper">
					<div class="contact-form">
					<form ngNativeValidate  onsubmit="return validation()" action="home">
	
					
						<div class="input-fields">
							<input id="pn" type="text" class="input" placeholder="Patient Name" onkeypress="return /[A-Za-z]/i.test(event.key)" autocomplete="off">
							<span style="color:#8b0000;" id="err1" class="text-danger"></span>
						</div><br>
						
						
						
						<div class="input-fields">
							<input id="datetime" type="datetime-local" class="input" placeholder="Date and Time" pattern="[0-9]{2}[/][0-9]{2}[/][0-9]{4} [0-9]{2}[:][0-9]{2}[ap][m]">
							<span  style="color:#8b0000;" id="err2" class="text-danger"></span>
						</div><br>
						
						
						<div class="input-fields">
							<input id="temp" type="number" min=0 class="input" placeholder="Temperature (in Fahrenheit)" autocomplete="off">
							<span  style="color:#8b0000;" id="err3" class="text-danger"></span>
						</div><br>
							
						<div class="input-fields">
							<input id="bp" type="text" class="input" placeholder="Blood Pressure (systolic/diastolic)mmHG" pattern="[0-9]+[/][0-9]+" autocomplete="off">
							<span  style="color:#8b0000;" id="err4" class="text-danger"></span>
						</div><br>
						
						<div class="input-fields">
							<input id="pulse" type="number" min=0 class="input" placeholder="Pulse Rate" autocomplete="off">
							<span  style="color:#8b0000;" id="err5" class="text-danger"></span>
						</div><br>
							
							<input type="submit" class="btn" name="submit" id="send">
						 
					</form>
					</div>
					</div>
					
	
			<script type="text/javascript">
				function validation(){
					
					if(pn.value==""){
						document.getElementById('err1').innerHTML="Required";
						return false;
					}
					
					if(datetime.value==""){
						document.getElementById('err2').innerHTML="Required";
						return false;
					}
					if(temp.value==""){
						document.getElementById('err3').innerHTML="Required";
						return false;
					}
					if(bp.value==""){
						document.getElementById('err4').innerHTML="Required";
						return false;
					}
					if(pulse.value==""){
						document.getElementById('err5').innerHTML="Required";
						return false;
					}
					/*if(breath.value==""){
						document.getElementById('err4').innerHTML="Required";
						return false;
					}*/
				}
			</script>
			
	</body>
	<script src="/vitals.js"></script>
	 
	</html>